.img{
  width: 100%;
  height: 548rpx;
  color: white;
  background: #979797;
  text-align: center;
  line-height: 548rpx;
  font-size: 50rpx;
}
.product_name{
  font-size: 12px;
  color: #979797;
  text-align: center;
  line-height: 20px;
}
.price_number{
  box-sizing: border-box;
  padding: 15px;
  height: 50px;
  line-height: 50px;
}
.price{
  height: 100%;
  float: left;
  width: 50%;
  color: #f5a933;
  font-size: 30px;
}
.price span{
  font-size: 14px;
}



.product_detail{
  width: 100%;
  box-sizing: border-box;
  padding:15px; 
  height: 200px;
  background: yellow;
}